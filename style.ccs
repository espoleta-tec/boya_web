* {
  box-sizing: border-box;
}

body {
  font-family: 'Segoe UI', sans-serif;
  background-color: #f7f9fc;
  color: #333;
  padding: 20px;
  margin: 0;
}

header {
  text-align: center;
  margin-bottom: 30px;
}

h1 {
  font-size: 2em;
  color: #0055aa;
}

section {
  margin-bottom: 40px;
  background: white;
  padding: 20px;
  border-radius: 10px;
  box-shadow: 0 2px 8px rgba(0,0,0,0.1);
}

canvas {
  background: #fff;
  border-radius: 8px;
}